# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Trata iOS"

  lane :build_ios do
    # add actions here: https://docs.fastlane.tools/actions
    require("./configure_entitlements.rb")
    sh("cp -f ../../../Entitlements-*.plist ../${nomeAplicativo.igreja}/")

    get_certificates
    get_provisioning_profile

    enable_automatic_code_signing(path: "${nomeAplicativo.igreja}.xcodeproj")
    gym(xcargs: "-allowProvisioningUpdates", export_method: "app-store")

    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  lane :build_android do
    # add actions here: https://docs.fastlane.tools/actions

    upload_to_play_store(track: 'beta', apk: 'build/outputs/apk/android-release-final.apk')
  end
end
